---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import SliderLogo from "../components/SliderLogo.astro";
import Wrapper from "../components/Wrapper.astro";
---

<Layout title="MEXIC0DE">
  <section class="parallax">
	  <img src="/assets/mountain.svg" alt="mountain" id="mountain" decoding="async" loading="lazy"/>
	  <img src="/assets/hill.svg" alt="hill" id="hill" decoding="async" loading="lazy"/>
	  <img src="/assets/piramid.svg" alt="piramid" id="piramid" decoding="async" loading="lazy"/>
	  <img src="/assets/agave.svg" alt="agave" id="agave" decoding="async" loading="lazy" />
	  <img src="/assets/mexRes.svg" alt="mexcode" id="bg-res" decoding="async" loading="lazy"/>
	  <h1 id="mex">MEXIC0DE</h1>
  </section>

  <section class="sec" id="start">
     <div class="grid col-2 sm-col-1 container middle">
	   <div class="img">
			    <img src="/assets/mexcodeLogo.png" alt="Mexic0de-Logo" width="100%" height="100%" decoding="async" loading="lazy" />
	   </div>
	   <div class="txt-center">
        <h2>¿Qué es MEXIC0DE?</h2>  
        <br>
        <p>MEXIC0DE es un grupo de desarrolladores Mexicano que buscan la creación de software de calidad.</p>
	   </div>
	  </div>
    
  </section>

  <section id="cards" class="sec">
    <br> 
    <Wrapper staticTxt="¿Que Hacemos?" one="Paginas Web" two="Aplicaciones Web" three="Landings Pages" four="Software de Calidad" />
    <div >
      <div class="grid col-3 md-col-1 sm-col-1">
        <Card title="Aplicaciones Web" body="Desarrollamos sistemas webs que ayuden a resolver un problema" href="https://cdn-icons-png.flaticon.com/512/8004/8004045.png"/>
        <Card title="Landing Pages" body="Creamos Landing Pages atractivas y con buen manejo de SEO para destacar tu negocio" href="https://cdn-icons-png.flaticon.com/512/10081/10081895.png"/>
        <Card title="Paginas Web" body="Construimos paginas webs completas para negocios y clientes personales" href="https://cdn-icons-png.flaticon.com/512/699/699931.png"/>
     </div>
    </div>
    <div class="container" >
      <h3 class="txt-center">Trabajamos con las tecnologias más modernas e interesantes!</h3>
      <br><br><br>
      <div>
      <SliderLogo />
      </div>
    </div>
    <br><br><br>
  </section>
  
  
  <script src = "../src/scripts/parallax.js" type="text/javascript"></script>
  
</Layout>

<style> 
.parallax {
	background: #caf6dc;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;
}
#mex {
	color: var(--light);
  position: absolute;
  font-weight: 900;
  font-size: 6em;
	font-family: var(--font2);
	text-shadow:2px 2px 2px rgba(0,0,0,0.5);
}
#bg-res{
	display: none;
}
.parallax img {
	position: absolute;
	top 0;
	left 0;
	width: 100%;
	pointer-events: none;
}

.sec{
	position: relative;
	display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 400px;
  padding-top: 100px;
	background: var(--green);
}

h2{
	font-size: 3em;
	color: var(--light);
	margin-bottom: 10px;
}
h3{
  font-size: 2em;
  color: var(--light);
  margin-bottom: 10px;
}
.sec p{
	font-size: 1.5em;
	color:#fff
}

/* Curved bg with plain CSS */
.curve {
  position: absolute;
  height: 250px;
  width: 100%;
  bottom: 0;
  text-align: center;
}
.curve::before {
  content: '';
  display: block;
  position: absolute;
  border-radius: 100% 50%;
  width: 55%;
  height: 100%;
  transform: translate(85%, 60%);
  background-color: hsl(216, 21%, 16%);
}
.curve::after {
  content: '';
  display: block;
  position: absolute;
  border-radius: 100% 50%;
  width: 55%;
  height: 100%;
  background-color: #3c31dd;
  transform: translate(-4%, 40%);
  z-index: -1;
}

/* Line Separator */
.separator{
 	position: relative;
	width: 100%;
	height: 2px;
	background: var(--light);
}

/* Responsive */
@media screen and (width: 1024px) {
	.parallax {
	height: 60vh;
  }
}

@media screen and (max-width: 768px) {
  .parallax {
	height: 60vh;
  }
  .parallax img {
	display: none;
  }

  #bg-res{
	display: block;
	position: absolute;
	top 0;
	left 0;
	width: 100%;
	height: 120vh;
	pointer-events: none;
  }

  #mex {
	font-size: 3em;
  }

  .img{
	display: flex;
	justify-content: center;
  }
  
  h2{
      font-size: 1.5em;
  }
  h3{
      font-size: 1.5em;
  }
  .sec p{
      font-size: 1em;
  }
}

@media screen and (max-width: 425px) {
  .parallax {
	height: 60vh;
  }

  #bg-res{
	margin-top: 10%;
  }
}
</style>
