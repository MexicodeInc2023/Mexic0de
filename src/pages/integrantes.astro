<style>
  /* Aqui va el css */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Library 3 am', cursive;
}

body {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    background: #10372a;
    flex-wrap: wrap;
}

.card {
    position: relative;
    width: 330px;
    height: 450px;
    
    border-radius: 5px;
    overflow: hidden;
    transition: .5s;
    
}

.card1 {
    position: relative;
    width: 300px;
    height: 400px;
    background: #0b1929;
    border-radius: 5px;
    overflow: hidden;
    transition: .5s;
    margin: 15px 20px;
}

.card1:hover {
    box-shadow: 0 5px 15px rgba(220, 229, 230, 0.5);
    transform: translateY(-15px);
}

.card1 .head {
    height: 125px;
    width: 100%;
    position: relative;
}

.card1 .head .circle {
    position: absolute;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background: #fccf4c;
    bottom: 0;
}

.card1 .head .img {
    width: 150px;
    height: 150px;
    position: absolute;
    background: #fff;
    padding: 5px;
    border-radius: 50%;
    bottom: -30%;
    left: 50%;
    transform: translate(-50%);
}

.card1 .head .img img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
}


.card1 .description {
    height: 200px;
    padding: 40px 20px 20px 20px;
    border-bottom: solid 1px rgba(236, 238, 238, 0.18);
    text-align: center;
}

.card1 .description h3 {
    color: #fffbec;
}

.card1 .description h4 {
    color: #fccf4c;
}

.card1 .description p {
    margin-top: 20px;
    font-size: 15px;
    color: #fffbec;
}


.card1 .contact {
    width: 100%;
    height: 75px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.card1 .contact a {
    text-decoration: none;
    color: #fff;
    background: #10372a;
    padding: 5px 20px;
    border-radius: 5px;
    transition: .3s;
}

.card1 .contact a:hover {
    
    background: #fccf4c;
   
}

.parallax {
	background: #caf6dc;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;
}

#mex {
	color: var(--light);
  position: absolute;
  font-weight: 900;
  font-size: 6em;
	font-family: var(--font2);
	text-shadow:2px 2px 2px rgba(0,0,0,0.5);
}

#bg-res{
	display: none;
}

.parallax img {
	position: absolute;
	top 0;
	left 0;
	width: 110%;
	pointer-events: none;
}

.sec{
	position: relative;
	display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 400px;
  padding-top: 100px;
	background: var(--green);
    
}


.sec p{
	font-size: 1.5em;
	color:#fff
}

/* Curved bg with plain CSS */
.curve {
  position: absolute;
  height: 250px;
  width: 100%;
  bottom: 0;
  text-align: center;
}
.curve::before {
  content: '';
  display: block;
  position: absolute;
  border-radius: 100% 50%;
  width: 55%;
  height: 100%;
  transform: translate(85%, 60%);
  background-color: hsl(216, 21%, 16%);
}
.curve::after {
  content: '';
  display: block;
  position: absolute;
  border-radius: 100% 50%;
  width: 55%;
  height: 100%;
  background-color: #3c31dd;
  transform: translate(-4%, 40%);
  z-index: -1;
}

/* Line Separator */
.separator{
 	position: relative;
	width: 100%;
	height: 2px;
	background: var(--light);
}

  
</style>

