    display: inline-flex;
    justify-content: center;
    align-items: center;
    width: 15rem;
    height: 100%;
    background-color: var(--primary);
    color: var(--dark);
    text-decoration: none;
    border-radius: 5px;
  }

  .btn-box .btn::before {
    content: "";
    position: absolute;
    top: 0;
