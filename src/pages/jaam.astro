  .home-content h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1.3;
  }
  .text-animate {
    font-size: 3rem;
    -webkit-animation: focus-in-expand 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94)
